<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:contentDescription="Strawberry Banana Smoothie"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintEnd_toStartOf="@+id/item_desc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blueberry_acai" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:background="#99ffffff"
        android:paddingLeft="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#330281"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_image"
        app:layout_constraintEnd_toStartOf="@+id/item_desc"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Strawberry-Banana" />

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#d09ef4"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#565151"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Fresh strawberries and organic bananas, crispy red apple, french vanilla yogurt, avacado and whey protein" />


</android.support.constraint.ConstraintLayout>
